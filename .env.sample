# Strategy Builder Framework - Sample Environment Variables
# Rename this file to .env and fill in your API keys

# MarketStack API credentials
MARKETSTACK_API_KEY=your_marketstack_api_key_here

# Optional MarketStack settings
MARKETSTACK_USE_HTTPS=true  # Set to false to use HTTP instead of HTTPS
MARKETSTACK_USE_CACHE=true  # Set to true to enable caching
MARKETSTACK_CACHE_TTL=3600  # Cache TTL in seconds (default: 3600 = 1 hour)

# Alpaca API credentials
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_API_SECRET=your_alpaca_api_secret_here

# Alpha Vantage API credentials (if you add this provider in the future)
# ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# Logging configuration
# LOGS_DIR=logs                    # Directory for log files (default: logs)
# LOG_LEVEL=INFO                   # Logging level: DEBUG, INFO, WARNING, ERROR (default: INFO)
# LOG_TO_CONSOLE=true              # Whether to log to console (default: true)
# LOG_TO_FILE=true                 # Whether to log to file (default: true)

# HTML Reports configuration  
# REPORTS_DIR=reports              # Directory for HTML reports (default: reports)
# GENERATE_HTML_REPORTS=true       # Whether to generate HTML reports by default (default: false)
